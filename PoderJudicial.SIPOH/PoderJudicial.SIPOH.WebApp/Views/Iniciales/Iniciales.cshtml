
@{
    ViewBag.Title = "Iniciales";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="juzgadoT-tab" data-toggle="tab" href="#JuzgadoT" role="tab" aria-controls="JuzgadoT" aria-selected="true">Juzgado Acusatorio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="juzgadoA-tab" data-toggle="tab" href="#JuzgadoA" role="tab" aria-controls="JuzgadoA" aria-selected="false">Juzgado Tradicional</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="JuzgadoT" role="tabpanel" aria-labelledby="juzgadoT-tab">
                            <!-- Todo el contenido aquí -->
                            <form id="formCausas" class="needs-validation mt-4" novalidate>
                                <div class="form-row">
                                    <div class="col-md-2 mb-3">
                                        <label for="slctCircuitoAc">Circuito:</label>
                                        <select class="custom-select" id="slctCircuitoAc" disabled></select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom04">Juzgado de Procedencia:</label>
                                        <select class="custom-select" id="slctJuzgado" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccionar Juzgado.
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="slcNumero">N° Causa o  Nuc</label>
                                        <select class="custom-select" id="slcNumero" required>
                                            @*<option selected value="">Seleccionar Opcíón</option>*@
                                            <option selected value="1">NUMERO UNICO DE CASO</option>
                                            <option value="2">NUMERO DE CAUSA</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccionar N° Unico de Caso / N° Causa.
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="validationCustomUsername">Numero</label>
                                        <div class="input-group" id="divNUC">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inpNUC">NUC</span>
                                            </div>
                                            <input type="text" class="form-control mr-3" id="inpNumero" aria-describedby="inpNUC" placeholder="0000/0000" required>
                                            <button class="btn btn-success" type="submit" id="btnNUC"><i class="fas fa-search"></i></button>
                                            <div class="invalid-feedback">
                                                Introducir N° Unico de Caso.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row justify-content-center">
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="JuzgadoA" role="tabpanel" aria-labelledby="juzgadoA-tab">
                            <form id="formCausasTradicional" class="needs-validation mt-4" novalidate>
                                <div class="form-row">
                                    <div class="col-md-2 mb-3">
                                        <label for="slctCircuitoTr">Circuito</label>
                                        <select class="custom-select" id="slctCircuitoTr" disabled></select>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="slcNumero">Distrito de Procedencia</label>
                                        <select class="custom-select" id="slctDistrito" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Selecciona un Distrito.
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom04">Juzgado de Procedencia</label>
                                        <select class="custom-select" id="slctJuzgadoTradi" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Selecciona un Juzgado.
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="validationCustomUsername">Numero</label>
                                        <div class="input-group" id="divCAU">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inputGroupPrepend">CAUSA</span>
                                            </div>
                                            <input type="text" class="form-control mr-3" id="inpCAUT" aria-describedby="inpCAU" placeholder="00-0000-0000" required>
                                            <button class="btn btn-success" type="submit" id="btnCAU"><i class="fas fa-save"></i></button>
                                            <div class="invalid-feedback">
                                                Introduce Numero de Causa.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row justify-content-center">
                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="tab-content">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                            </table>
                        </div>
                    </div>

                    <!-- CONTENEDOR BENEFICIARIO -->
                    <div class="tab-content" id="contenedorBeneficiario">

                        <form id="formEjecucion" class="needs-validation" novalidate>
                            <!-- BUSCADOR BENEFICIARIO -->
                            <div id="seccionBusquedaBeneficiario">

                                <!-- FILA UNO -->
                                <div class="form-row mt-4">
                                    <div class="col-12">
                                        <label for="validationCustomUsername">Sentenciado/Beneficiario</label>
                                    </div>
                                </div>

                                <!-- FILA DOS -->
                                <div class="form-row">
                                    <div class="col-12 col-md-6 mt-1">
                                        <div class="input-group" id="divApellidoPSentenciado">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="lbApellidoPaterno">Apellido Paterno</span>
                                            </div>
                                            <input type="text" class="form-control" id="inpApellidoPaterno" aria-describedby="inpNumero" required>
                                            <div class="invalid-feedback">
                                                Introducir nombre del Beneficiario
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 col-md-6 mt-3 mt-md-1">
                                        <div class="input-group" id="divApellidoMSentenciado">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="lbApellidoMaterno">Apellido Materno</span>
                                            </div>
                                            <input type="text" class="form-control" id="inpApellidoMaterno" aria-describedby="inpNumero" optional>
                                            <div class="invalid-feedback">
                                                Introducir nombre del Beneficiario
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- FILA TRES -->
                                <div class="form-row">
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="input-group" id="divNombreSentenciado ">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="lbNombreSentenciado">Nombre(s)</span>
                                            </div>
                                            <input type="text" class="form-control" id="inpNombreSentenciado" aria-describedby="inpNumero" required>
                                            <div class="invalid-feedback">
                                                Introducir nombre del Beneficiario
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6 mt-3">
                                        <div class="input-group" id="divBusquedaSentenciado">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inpBusquedaSentenciado">Consultar</span>
                                            </div>
                                            <input type="text" class="form-control mr-3" id="inpBusquedaSentenciado" aria-describedby="inpNumero" disabled>
                                            <div class="btn btn-success" id="btnTotalBusqueda"><i class="fa fa-eye icon"></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="seccionBeneficiario">
                                <!-- FILA CUATRO -->
                                <div class="form-row">
                                    <div class="col-12 col-md-6 mt-3">
                                        <label for="validationCustom04"> ¿Sentenciado Interno?</label>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1">
                                            <label class="form-check-label" for="exampleRadios1">
                                                Si
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                                            <label class="form-check-label" for="exampleRadios2">
                                                No
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <!-- FILA CINCO -->
                                <div class="form-row">
                                    <div class="col-12 col-md-4 mt-3">
                                        <label for="validationCustom04">Solicitante</label>
                                        <select class="custom-select" id="slctJuzgado" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccionar Juzgado.
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-8 mt-3 mt-md-5">
                                        <div class="input-group" id="divNombreSentenciado">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inpNombreSentenciado">Otro</span>
                                            </div>
                                            <input type="text" class="form-control" id="inpNumero" aria-describedby="inpNumero" disabled>
                                            <div class="invalid-feedback">
                                                Introdusca un valor
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- FILA SEIS -->
                                <div class="form-row">
                                    <div class="col-12 mt-3">
                                        <div class="input-group" id="divNombreSentenciado">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inpNombreSentenciado">Detalle del Solicitante</span>
                                            </div>
                                            <input type="text" class="form-control" id="inpNumero" aria-describedby="inpNumero" required>
                                            <div class="invalid-feedback">
                                                Introdusca un valor
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- FILA SIETE -->
                                <div class="form-row">
                                    <div class="col-12 col-md-8 mt-3">
                                        <label for="validationCustom04">Solicitud</label>
                                        <select class="custom-select" id="slctJuzgado" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccionar Juzgado.
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-4 mt-5">
                                        <div class="input-group" id="divNombreSentenciado">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text mr-3" id="inpNUC">Crear Inicial</span>
                                            </div>
                                            <button class="btn btn-success " type="submit" id="btnNUC"><i class="fas fa-save"></i></button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>

                        <!-- FILA OCHO -->
                        <form id="formAnexos" class="needs-validation" novalidate>
                            <div id="seccionBusquedaAnexos">
                                <div class="form-row">
                                    <div class="col-12 col-md-8 mt-3">
                                        <label for="validationCustom04">Anexos</label>
                                        <select class="custom-select" id="slctJuzgado" required>
                                            <option selected value="">SELECCIONAR DESCRIPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccione una Descripción
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-4 mt-3 mt-md-5">
                                        <div class="input-group" id="divNUC">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inpNUC">Cantidad</span>
                                            </div>
                                            <input type="text" class="form-control mr-3" id="inpNumero" aria-describedby="inpNUC" required>
                                            <button class="btn btn-success" type="submit" id="btnNUC"><i class="fas fa-plus"></i></button>
                                            <div class="invalid-feedback">
                                                Introduzca Una Cantidad
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <!-- FILA NUEVE -->
                        <div id="seccionTablaAnexos">
                            <div class="form-row">
                                <div class="col-8">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover table-sm" id="dataTableAnexos" width="100%" cellspacing="0">
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/Master/Jquery")
@Scripts.Render("~/Scripts/Modules/Ejecucion/Iniciales")
<script src="~/Scripts/Modules/Ejecucion/Iniciales/PruebaValidaciones.js"></script>



