
@{
    ViewBag.Title = "Iniciales";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="juzgadoT-tab" data-toggle="tab" href="#JuzgadoT" role="tab" aria-controls="JuzgadoT" aria-selected="true">Juzgado Acusatorio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="juzgadoA-tab" data-toggle="tab" href="#JuzgadoA" role="tab" aria-controls="JuzgadoA" aria-selected="false">Juzgado Tradicional</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="JuzgadoT" role="tabpanel" aria-labelledby="juzgadoT-tab">
                            <!-- Todo el contenido aquí -->
                            <form class="needs-validation mt-4 ml-2" novalidate>
                                <div class="form-row">
                                    <div class="col-md-2 mb-3">
                                        <label for="slctCircuitoAc">Circuito:</label>
                                        <select class="custom-select" id="slctCircuitoAc" disabled></select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom04">Juzgado de Procedencia:</label>
                                        <select class="custom-select" id="slctJuzgado" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccionar Juzgado.
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="slcNumero">N° Causa o  Nuc</label>
                                        <select class="custom-select" id="slcNumero" required>
                                            @*<option selected value="">Seleccionar Opcíón</option>*@
                                            <option selected value="1">NUMERO UNICO DE CASO</option>
                                            <option value="2">NUMERO DE CAUSA</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Seleccionar N° Unico de Caso / N° Causa.
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="validationCustomUsername">Numero</label>
                                        <div class="input-group" id="divNUC">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inpNUC">NUC</span>
                                            </div>
                                            <input type="text" class="form-control mr-3" id="inpNumero" aria-describedby="inpNUC" placeholder="0000/0000" required>
                                            <button class="btn btn-success" type="submit" id="btnNUC"><i class="fas fa-save"></i></button>
                                            <div class="invalid-feedback">
                                                Introducir N° Unico de Caso.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row justify-content-center">
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="JuzgadoA" role="tabpanel" aria-labelledby="juzgadoA-tab">
                            <form class="needs-validation mt-4 ml-2" novalidate>
                                <div class="form-row">
                                    <div class="col-md-2 mb-3">
                                        <label for="slctCircuitoTr">Circuito</label>
                                        <select class="custom-select" id="slctCircuitoTr" disabled></select>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="slcNumero">Distrito de Procedencia</label>
                                        <select class="custom-select" id="slctDistrito" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Selecciona un Distrito.
                                        </div>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="validationCustom04">Juzgado de Procedencia</label>
                                        <select class="custom-select" id="slctJuzgadoTradi" required>
                                            <option selected value="">SELECCIONAR OPCIÓN</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Selecciona un Juzgado.
                                        </div>
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="validationCustomUsername">Numero</label>
                                        <div class="input-group" id="divCAU">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="inputGroupPrepend">CAUSA</span>
                                            </div>
                                            <input type="text" class="form-control mr-3" id="inpCAUT" aria-describedby="inpCAU" placeholder="00-0000-0000" required>
                                            <button class="btn btn-success" type="submit" id="btnCAU"><i class="fas fa-save"></i></button>
                                            <div class="invalid-feedback">
                                                Introduce Numero de Causa.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row justify-content-center">
                                </div>
                            </form>

                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/Master/Jquery")
@Scripts.Render("~/Scripts/Modules/Ejecucion/Iniciales")
<script src="~/Scripts/Modules/Ejecucion/Iniciales/PruebaValidaciones.js"></script>



