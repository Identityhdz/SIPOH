
@{
    ViewBag.Title = "Consignaciones Historicas";
}

<div class="container-fluid">
    <div class="row">
        <div class="card shadow-sm  col-sm-12">

            <div class="card-header">
                <h6 class="card-title">
                    Registro de Consignacion Historica
                </h6>
            </div>

            <div class="card-body">
                <!-- Guia -->
                <ul class="nav nav-pills nav-success" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="juzgadoA-tab" data-toggle="tab" href="#JuzgadoA" role="tab" aria-controls="JuzgadoA" aria-selected="true"><i class="icon-office mr-2"></i>Juzgado Acusatorio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="juzgadoT-tab" data-toggle="tab" href="#JuzgadoT" role="tab" aria-controls="JuzgadoT" aria-selected="false"><i class="icon-library mr-2"></i>Juzgado Tradicional</a>
                    </li>
                </ul>

                <div class="tab-content mt-2 mb-3" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <form id="formExpedienteCausas" class="needs-validation" novalidate>
                            <div class="form-row">
                                <div class="col-md-12 col-lg-6 form-group">

                                    <label for="validationCustom04"><strong>Juzgado de Procedencia</strong></label>

                                    @Html.DropDownList("SelectJuzgadoAcusatorio", (SelectList)ViewBag.JuzgadosAcusatorios, "SELECCIONAR OPCIÓN", new { @id = "slctJuzgado", @class = "custom-select formatear", @required = "required" })

                                    <div class="invalid-feedback">
                                        <i class="icon-notification"></i> Por favor, selecciona un juzgado.
                                    </div>

                                    <div class="valid-feedback">
                                        <i class="icon-checkmark"></i> Juzgado seleccionado.
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-3 form-group">
                                    <label class="" for="inpNumero" id="NumeroLabel"><b>Numero de Causa</b></label>
                                    <div class="input-group">
                                        <input type="text" id="inpNumeroExpediente" name="NumeroExpediente" class="form-control mr-2" aria-label="Small" aria-describedby="inputGroup-sizing-sm" data-inputmask-clearmaskonlostfocus="true" required>
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-3 form-group">
                                    <label class="" for="inpNumero" id="NumeroLabel"><b>Numero Unico de Caso</b></label>
                                    <div class="input-group">
                                        <input type="text" id="inpNuc" name="Nuc" class="form-control mr-2" aria-label="Small" aria-describedby="inputGroup-sizing-sm" data-inputmask-clearmaskonlostfocus="true" required>
                                        <button class="btn btn-success btn-sm" type="submit" id="btnNUC" data-toggle="tooltip" data-placement="top" title="Consultar Expediente"><i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>



                </div>
            </div>
        </div>
    </div>
</div>


<!--librerias para Date Time Picker-->

